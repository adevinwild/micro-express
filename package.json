{
    "name": "micro-express",
    "version": "1.0.0",
    "author": "adevinwild",
    "main": "dist/app.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/adevinwild/micro-express.git"
    },
    "license": "MIT",
    "scripts": {
        "build": "rimraf dist && tsc --build",
        "dev": "tsc-watch -p tsconfig.json --onSuccess \"nodemon ./dist/app.js\"",
        "format": "eslint src/**/*.ts --fix",
        "lint": "eslint src/**/*.ts",
        "start": "node ./dist/app.js",
        "test": "jest",
        "migration:generate": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:generate -d ./src/config/datasource.ts",
        "migration:up": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:run -d ./src/config/datasource.ts",
        "migration:down": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:revert -d ./src/config/datasource.ts"
    },
    "resolutions": {
        "jackspeak": "2.1.1"
    },
    "dependencies": {
        "awilix": "^8.0.1",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "glob": "^10.3.4",
        "ora": "5.4.1",
        "pg": "^8.11.3",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.3.17",
        "winston": "^3.10.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.14",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.4",
        "@types/node": "^20.6.0",
        "@typescript-eslint/eslint-plugin": "^6.7.0",
        "@typescript-eslint/parser": "^6.7.0",
        "eslint": "^8.49.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-jest": "^27.2.3",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3",
        "rimraf": "^5.0.1",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tsc-watch": "^6.0.4",
        "typescript": "^5.2.2"
    },
    "engines": {
        "node": ">=16"
    }
}
