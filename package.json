{
    "name": "micro-express",
    "version": "1.0.0",
    "author": "adevinwild",
    "repository": {
        "type": "git",
        "url": "https://github.com/adevinwild/micro-express.git"
    },
    "license": "MIT",
    "scripts": {
        "build": "rimraf build && tsc -p tsconfig.json",
        "dev": "tsc-watch -p tsconfig.json --onSuccess \"nodemon ./build/app.js\"",
        "format": "eslint src/**/*.ts --fix",
        "lint": "eslint src/**/*.ts",
        "start": "yarn build && node build/app.js",
        "test": "jest"
    },
    "dependencies": {
        "awilix": "^8.0.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "glob": "^10.3.4"
    },
    "devDependencies": {
        "@types/cors": "^2.8.14",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.4",
        "@types/node": "^20.6.0",
        "@typescript-eslint/eslint-plugin": "^6.7.0",
        "@typescript-eslint/parser": "^6.7.0",
        "eslint": "^8.49.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-jest": "^27.2.3",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3",
        "rimraf": "^5.0.1",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tsc-watch": "^6.0.4",
        "typescript": "^5.2.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "yarn": ">=1.22.0"
    }
}
